<Window x:Class="Kirin_2.Login"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kirin_2.Helper"
        mc:Ignorable="d" Height="376.875" Width="597.969" ResizeMode="NoResize" Icon="Logo.ico" WindowStartupLocation="CenterScreen" Title="Login Page">
    <Grid>
        <Image x:Name="image" HorizontalAlignment="Left" Height="76" Margin="250,24,0,0" VerticalAlignment="Top" Width="76" Source="Logo.ico" Stretch="Fill"/>
        <Label x:Name="label" Content="Email" HorizontalAlignment="Left" Margin="125,134,0,0" VerticalAlignment="Top" Height="31" Width="49" FontWeight="Bold" FontSize="14"/>
        <TextBox x:Name="txtUserName" HorizontalAlignment="Left" Height="32" Margin="187,132,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" VerticalContentAlignment="Center" TextChanged="txtUserName_TextChanged" FontSize="14"/>
        <Button x:Name="btnSendPassword" Content="Send Password" HorizontalAlignment="Left" Margin="420,132,0,0" VerticalAlignment="Top" Width="125" Height="32" FontWeight="Bold" FontSize="14" Click="btnSendPassword_Click"/>
        <Grid x:Name="sectionBottomID">
            <Label x:Name="label_Copy" Content="Password" HorizontalAlignment="Left" Margin="100,178,0,0" VerticalAlignment="Top" Height="31" Width="79" RenderTransformOrigin="0.762,0.429" FontWeight="Bold" FontSize="14"/>
            <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="187,177,0,0" VerticalAlignment="Top" Width="250" Height="32" VerticalContentAlignment="Center" FontSize="14"/>
            <Button x:Name="btnSignIn" Content="Sign In" HorizontalAlignment="Left" Margin="245,234,0,0" VerticalAlignment="Top" Width="88" Height="32" FontWeight="Bold" Click="btnSignIn_Click" FontSize="14"/>
        </Grid>
        <Label x:Name="lblError" Content="" HorizontalAlignment="Left" Margin="85,313,0,0" VerticalAlignment="Top" Width="415" Height="28" Foreground="Red" HorizontalContentAlignment="Center"/>

    </Grid>
</Window>
