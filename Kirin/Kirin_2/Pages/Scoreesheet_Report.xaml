<Page x:Class="Kirin_2.Pages.Scoreesheet_Report"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:settings="clr-namespace:Kirin_2.Properties"
      xmlns:local="clr-namespace:Kirin_2.Pages"
      xmlns:rv="clr-namespace:Microsoft.Reporting.WinForms;assembly=Microsoft.ReportViewer.WinForms"
      mc:Ignorable="d" 
      FontFamily="{DynamicResource MaterialDesignFont}"
      d:DesignHeight="450" d:DesignWidth="800"
      Width="Auto"  
      Title="StudentRoster">
    <Border x:Name="BorderClasses" BorderThickness="1" Panel.ZIndex="-100" CornerRadius="5,5,5,5" Margin="20"
                    BorderBrush="{Binding Source={x:Static settings:Settings.Default}, Path=Dashboard_Box_Outline, Mode=TwoWay }" Background="Transparent"  >

        <Grid>
            <WindowsFormsHost>
                <rv:ReportViewer x:Name="_reportViewer" ProcessingMode="Remote" BorderStyle="None" ShowToolBar="False" />
            </WindowsFormsHost>
        </Grid>
    </Border>
</Page>
