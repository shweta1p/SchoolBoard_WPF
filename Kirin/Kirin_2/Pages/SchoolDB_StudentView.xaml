    </Page.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="3.5*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10">
            <Rectangle Width="100" Height="110" VerticalAlignment="Center" Stroke="LightGray">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="{Binding STUDENT_PHOTO}"></ImageBrush>
                </Rectangle.Fill>
            </Rectangle>
            <StackPanel Width="Auto">
                <Label Content="Student Info" FontSize="24" FontWeight="Bold" Margin="30 0 0 20" ></Label>
                <StackPanel Orientation="Horizontal" Margin="10 0 0 0" >
                    <Label Content="Name: " FontWeight="Bold" FontSize="20" Margin="20 0 0 0"/>
                    <Label Content="{Binding Path=STUDENTPROF.FULLNAME}" FontSize="20" />
                    <Label Content="Gr: " FontWeight="Bold" FontSize="20" Margin="20 0 0 0" />
                    <Label Content="9" FontSize="20"/>
                    <!--<Label Content="Age: " FontWeight="Bold" FontSize="20" Margin="20 0 0 0"/>
                    <Label Content="14 years and 5 months" FontSize="20" />-->
                    <Label Content="Birthdate: " FontWeight="Bold" FontSize="20" Margin="20 0 0 0" />
                    <Label Content="{Binding Path=STUDENTPROF.BIRTHDATE}" FontSize="20" />
                    <Label Content="Gender: " FontWeight="Bold" FontSize="20" Margin="20 0 0 0" />
                    <Label Content="{Binding Path=STUDENTPROF.GENDER}" FontSize="20" />
                    <Label Content="Student Number: " FontWeight="Bold" FontSize="20" Margin="20 0 0 0" />
                    <Label Content="{Binding Path=STUDENTPROF.STUDENT_ID}" FontSize="20" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="10 10 0 0">
                    <Label Content="School: " FontWeight="Bold" FontSize="20" Margin="20 0 0 0" />
                    <Label Content="{Binding Path=STUDENTPROF.SCHOOL_NAME}" FontSize="20" />
                    <Label Content="Learning Choice: " FontWeight="Bold" FontSize="20" Margin="20 0 0 0" />
                    <Label Content="FT In-Person" FontSize="20" Margin="10 0 0 0"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <Border DockPanel.Dock="Top" BorderThickness="1" Grid.Row="1" Grid.Column="0" Panel.ZIndex="-100" CornerRadius="5,5,5,5" 
                    BorderBrush="LightGray" Background="Transparent" Margin="10 0 15 10" >
            <DockPanel>
                <Border DockPanel.Dock="Top" BorderBrush="White" Background="#247BC0" HorizontalAlignment="Stretch" BorderThickness="1" >
                    <Label HorizontalAlignment="Center" FontSize="18" FontWeight="Bold" Foreground="White">Attendance By Class</Label>
                </Border>

                <Grid DockPanel.Dock="Bottom" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <DataGrid VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" x:Name="InfoGrid"
