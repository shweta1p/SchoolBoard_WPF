                                            <Rectangle Height="50" Grid.Column="4" Grid.Row="0" Fill="Transparent" Stroke="LightGray" />

                                            <Label Grid.Column="0" Grid.Row="0" Content="{Binding Path=LastWeekAttendance_M}" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" />
                                            <Label Grid.Column="1" Grid.Row="0" Content="{Binding Path=LastWeekAttendance_T}" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                                            <Label Grid.Column="2" Grid.Row="0" Content="{Binding Path=LastWeekAttendance_W}" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                                            <Label Grid.Column="3" Grid.Row="0" Content="{Binding Path=LastWeekAttendance_H}" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                                            <Label Grid.Column="4" Grid.Row="0" Content="{Binding Path=LastWeekAttendance_F}" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn HeaderTemplate="{StaticResource HeaderTemplate_ThisWeek}" Width="2*" >
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0 0 0 0" >
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
