                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5" Grid.RowSpan="2" VerticalAlignment="Top" HorizontalContentAlignment="Center"  Padding="0,0,0,0" FontSize="16" FontWeight="Bold" Foreground="White" Content="Absences" />
                    <Label Grid.Row="1" Grid.Column="0" VerticalContentAlignment="Top" HorizontalContentAlignment="Left"  FontSize="14" FontWeight="Bold" Foreground="White" Content="S2" />
                    <Label Grid.Row="1" Grid.Column="1" VerticalAlignment="Top" HorizontalContentAlignment="Left" FontSize="14" FontWeight="Bold" Foreground="White" Content="21-22"  />
                </Grid>
            </DataTemplate>

            <DataTemplate x:Key="HeaderTemplate_Lates">
                <Grid Height="50">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5" Grid.RowSpan="2" VerticalAlignment="Top" HorizontalContentAlignment="Center" Padding="0,0,0,0" FontSize="16" FontWeight="Bold" Foreground="White" Content="Lates" />
