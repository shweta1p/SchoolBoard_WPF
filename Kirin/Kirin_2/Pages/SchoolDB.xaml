    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel>
            <Viewbox Stretch="None" HorizontalAlignment="Left">
                <TextBlock FontSize="24" FontWeight="SemiBold" Margin="15 10 0 20"> SCHOOL BOARD DATABASE</TextBlock>
            </Viewbox>
            <Border BorderThickness="1" Panel.ZIndex="-100" CornerRadius="5,5,5,5" 
                        BorderBrush="{Binding Source={x:Static settings:Settings.Default}, Path=Dashboard_Box_Outline, Mode=TwoWay }" 
                        Background="Transparent" Margin="10 10 20 20" >
                <Viewbox x:Name="vbdashboard" Stretch="UniformToFill" Grid.Row="0" Grid.Column="0" Margin="10">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="80 5 80 -5">
                            <TextBlock Text="Listing Options: " FontSize="16" FontWeight="DemiBold" VerticalAlignment="Center"/>
                            <RadioButton Name="rdAll" Checked="rdAll_Checked" Content="All" IsTabStop="False" FontWeight="DemiBold" FontSize="16" IsChecked="True" VerticalAlignment="Center" Foreground="#004890" Margin="0 0 15 0" Style="{x:Null}"/>
                            <RadioButton Name="rdStudents" Checked="rdStudents_Checked" Content="Students" IsTabStop="False" FontWeight="DemiBold" FontSize="16" VerticalAlignment="Center" Foreground="#004890" Margin="0 0 15 0" Style="{x:Null}" />
                            <RadioButton Name="rdTeachers" Checked="rdTeachers_Checked" Content="Teachers" IsTabStop="False" FontWeight="DemiBold" FontSize="16" VerticalAlignment="Center" Foreground="#004890" Margin="0 0 15 0" Style="{x:Null}" />
                            <RadioButton Name="rdStaff" Checked="rdStaff_Checked" Content="Support Staff" IsTabStop="False" FontWeight="DemiBold" FontSize="16" VerticalAlignment="Center" Foreground="#004890" Margin="0 0 15 0" Style="{x:Null}" />
                            <RadioButton Name="rdAdmin" Checked="rdAdmin_Checked" Content="School Board Administrator" IsTabStop="False" FontWeight="DemiBold" VerticalAlignment="Center" FontSize="16" Foreground="#004890" Margin="0 0 15 0" Style="{x:Null}" />

                            <materialDesign:ColorZone CornerRadius="20" Width="250" VerticalAlignment="Center" HorizontalAlignment="Left" HorizontalContentAlignment="Left"
                                    Mode="Light" materialDesign:ShadowAssist.ShadowDepth="Depth1" Height="35" Background="WhiteSmoke" Margin="40 0 0 0 " >
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Right" Orientation="Horizontal">
                                    <Button Style="{DynamicResource MaterialDesignToolButton}" VerticalContentAlignment="Top">
                                        <materialDesign:PackIcon Kind="Search" Width="20" Height="30" Opacity=".56"  />
                                    </Button>
                                    <TextBox FontSize="16" FontWeight="Bold" Margin="8 0 0 0" materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                            BorderThickness="0" MinWidth="100" Name="SearchBox" TextChanged="SearchBox_TextChanged" VerticalAlignment="Center" />

                                </StackPanel>
                            </materialDesign:ColorZone>
                        </StackPanel>

                       <!--<DataGrid x:Name="DGStaff" VerticalAlignment="Top" ItemsSource="{Binding SCHOOLDB_ALL}" SelectionUnit="FullRow"
                                  AlternationCount="2" AlternatingRowBackground="{Binding Source={x:Static settings:Settings.Default}, Path=AlternatingBGColor, Mode=TwoWay }"
                                  CanUserAddRows="false" IsReadOnly="True" Height="400" GridLinesVisibility="None" CanUserReorderColumns="False" FontSize="16"
                                  AutoGenerateColumns="False" Margin="10" RowHeight="35" FontWeight="Bold" HorizontalScrollBarVisibility="Auto"
                                  CanUserResizeColumns="False" VerticalScrollBarVisibility="Auto">
                            <DataGrid.Resources>
                                <local:BindingProxy x:Key="IsRoleVisible" Data="{Binding IsRoleVisible}"   />
                                <local:BindingProxy x:Key="IsContactVisible" Data="{Binding IsContactVisible}"   />
