                                <local:BindingProxy x:Key="IsStatusVisible" Data="{Binding IsStatusVisible}"   />
                                <local:BindingProxy x:Key="PNumLabel" Data="{Binding PhoneNumberLabel}"   />

                                <Style BasedOn="{StaticResource {x:Type DataGridColumnHeader}}" TargetType="{x:Type DataGridColumnHeader}">
                                    <Setter Property="Background" Value="{Binding Source={x:Static settings:Settings.Default}, Path=Datagrid_header, Mode=TwoWay }" />
                                    <Setter Property="Height" Value="35"/>
                                    <Setter Property="FontSize" Value="18" />
                                    <Setter Property="FontWeight" Value="ExtraBold" />
                                    <Setter Property="Foreground" Value="WhiteSmoke" />
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="10 0" />
                                </Style>
                                <Style BasedOn="{StaticResource {x:Type DataGridCell}}" TargetType="{x:Type DataGridCell}">
                                    <Setter Property="Height" Value="30"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Setter Property="Padding" Value="0" />
                                    <Setter Property="FontSize" Value="16" />
                                    <Setter Property="FontWeight" Value="Bold" />
                                    <Setter Property="FontFamily" Value="Roboto" />
                                    <Setter Property="Tag" Value="{Binding Path=ID}" />
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                    <Setter Property="Focusable" Value="False"/>
                                </Style>

                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Height" Value="30"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Setter Property="Padding" Value="0" />
                                    <Setter Property="FontSize" Value="16" />
                                    <Setter Property="FontWeight" Value="Bold" />
                                    <Setter Property="FontFamily" Value="Roboto" />
                                    <Setter Property="Tag" Value="{Binding Path=ID}" />
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                    <Setter Property="Focusable" Value="False"/>
                                </Style>

                            </DataGrid.Resources>

                            <DataGrid.CellStyle>

                                <Style TargetType="DataGridCell">
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Setter Property="Padding" Value="0" />
                                    <Setter Property="FontSize" Value="16" />
                                    <Setter Property="FontWeight" Value="Bold" />
                                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                    <Setter Property="Focusable" Value="False"/>
                                    <Setter Property="TextBlock.TextAlignment" Value="Center" />
                                </Style>
                            </DataGrid.CellStyle>

                            <DataGrid.Columns>

                                <DataGridTextColumn Header="#" Binding="{Binding Path=RowNo}" Width="50" >

                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                            <Setter Property="VerticalAlignment" Value="Center" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTemplateColumn Width="200">
                                    <DataGridTemplateColumn.HeaderStyle>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="HorizontalAlignment" Value="Left"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="Background" Value="{Binding Source={x:Static settings:Settings.Default}, Path=Datagrid_header, Mode=TwoWay }" />
                                            <Setter Property="Height" Value="25" />
                                        </Style>
                                    </DataGridTemplateColumn.HeaderStyle>
                                    <DataGridTemplateColumn.Header>
                                        <TextBlock Text="Name" FontSize="18" HorizontalAlignment="Left" FontWeight="ExtraBold" Height="35" Foreground="WhiteSmoke"/>
                                    </DataGridTemplateColumn.Header>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate >
                                            <StackPanel Orientation="Horizontal"  >
                                                <Button Command="{Binding Path=DataContext.cViewStaffProfile, RelativeSource= {RelativeSource AncestorType={x:Type DataGrid}}}" CommandParameter="{Binding}" >
                                                   <Button.Template>
                                                        <ControlTemplate>
                                                            <TextBlock Text="{Binding Path=NAME}" Foreground="Black" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" Margin="5 0 0 0" />
                                                        </ControlTemplate>
                                                    </Button.Template>
                                                </Button>
                                            </StackPanel>
                                        </DataTemplate>

                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                               <DataGridTextColumn Header="Email" Binding="{Binding Path=EMAIL}" Width="200" >
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                            <Setter Property="Foreground" Value="#004890"/>
                                            <Setter Property="FontWeight" Value="bold" />
                                            <Setter Property="Height" Value="20"/>
                                            <Setter Property="FontSize" Value="16"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Primary Contact" Binding="{Binding Path=PRIMARY_CONTACT}" Width="200"
                                                 Visibility="{Binding Path=Data, Converter={StaticResource BoolToVisibilityConverter}, Source={StaticResource IsContactVisible}}" >
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                            <Setter Property="FontSize" Value="16"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Relation" Binding="{Binding Path=RELATIONSHIP}" Width="170"
                                                 Visibility="{Binding Path=Data, Converter={StaticResource BoolToVisibilityConverter}, Source={StaticResource IsRelationVisible}}" >
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                            <Setter Property="VerticalAlignment" Value="Center" />
                                            <Setter Property="TextAlignment" Value="Center" />
                                            <Setter Property="FontSize" Value="16"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTemplateColumn  Width="220">
                                    <DataGridTemplateColumn.HeaderTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding  Path=Data, Source={StaticResource PNumLabel}}" TextAlignment="Center" VerticalAlignment="Center"  HorizontalAlignment="Center"  />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.HeaderTemplate>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding  Path=PHONE_NUMBER}"  HorizontalAlignment="Center" TextAlignment="Center" VerticalAlignment="Center"  />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>


                                <DataGridTextColumn Header="Role" Binding="{Binding Path=ROLE}"  Width="270"
                                            Visibility="{Binding Path=Data, Converter={StaticResource BoolToVisibilityConverter}, Source={StaticResource IsRoleVisible}}" >
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                            <Setter Property="VerticalAlignment" Value="Center" />
                                            <Setter Property="TextAlignment" Value="Center" />
                                            <Setter Property="FontSize" Value="16"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Status" Binding="{Binding Path=STATUS}" Width="150"
                                            Visibility="{Binding Path=Data, Converter={StaticResource BoolToVisibilityConverter}, Source={StaticResource IsStatusVisible}}" >
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                            <Setter Property="VerticalAlignment" Value="Center" />
                                            <Setter Property="TextAlignment" Value="Center" />
                                            <Setter Property="FontSize" Value="16"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>-->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="550" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <!--<Notification:SfBusyIndicator x:Name="busyIndicator" Visibility="Collapsed"/>-->
                            <syncfusion:SfDataGrid x:Name="DGStaff" Grid.Row="0" GridLinesVisibility="None" AlternationCount="2" 
                               AlternatingRowStyle ="{StaticResource alternatingRowStyle}" HorizontalContentAlignment="Center"
                               BorderBrush="{Binding Source={x:Static settings:Settings.Default}, Path=Dashboard_Box_Outline, Mode=TwoWay }" 
                               VerticalContentAlignment="Center" Focusable="False" EnableDataVirtualization="True"
                               RowStyle="{StaticResource RowStyle}" FontSize="16" FontWeight="Bold"
                               AllowEditing="False" Margin="30 5 10 5" RowHeight="40" HeaderRowHeight="40"
                               AutoGenerateColumns="False" HeaderStyle="{StaticResource headerStyle}" 
                               ItemsSource="{Binding ElementName=dataPager,Path=PagedSource,Mode=TwoWay}" SelectionMode="Multiple">
                                <syncfusion:SfDataGrid.Resources>
                                    <Style TargetType="{x:Type Button}">
                                        <Setter Property="Height" Value="30"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Setter Property="Padding" Value="0" />
                                        <Setter Property="FontSize" Value="16" />
                                        <Setter Property="FontWeight" Value="Bold" />
                                        <Setter Property="FontFamily" Value="Roboto" />
                                        <Setter Property="Tag" Value="{Binding Path=ID}" />
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                        <Setter Property="Focusable" Value="False"/>
                                    </Style>
                                </syncfusion:SfDataGrid.Resources>

                                <syncfusion:SfDataGrid.Columns>
                                    <syncfusion:GridTextColumn AllowFocus="False" IsReadOnly="True" HeaderText="#" MappingName="RowNo" Width="70" TextAlignment="Center">
                                    </syncfusion:GridTextColumn>
                                    <syncfusion:GridTextColumn AllowFocus="False" Width="220" HeaderText="Name" MappingName="NAME" TextAlignment="Center">
                                        <syncfusion:GridTextColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Button Command="{Binding DataContext.cViewStaffProfile, ElementName=DGStaff}"
                                                        CommandParameter="{Binding}">
                                                        <Button.Template>
                                                            <ControlTemplate>
                                                                <TextBlock Text="{Binding NAME}" Foreground="Black" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" Margin="5 0 0 0" />
                                                            </ControlTemplate>
                                                        </Button.Template>
                                                    </Button>
                                                </StackPanel>
                                            </DataTemplate>
                                        </syncfusion:GridTextColumn.CellTemplate>
                                    </syncfusion:GridTextColumn>
                                    <syncfusion:GridTextColumn AllowFocus="False" IsReadOnly="True" Width="240" HeaderText="Email" MappingName="EMAIL" TextAlignment="Center" />
                                    <syncfusion:GridTextColumn AllowFocus="False" IsReadOnly="True" Width="220" HeaderText="Primary Contact" MappingName="PRIMARY_CONTACT" 
                                                               TextAlignment="Center" IsHidden="{Binding Data, Source={StaticResource IsContactVisible}}" />
                                    <syncfusion:GridTextColumn AllowFocus="False" IsReadOnly="True" Width="180" HeaderText="Relation" MappingName="RELATIONSHIP" TextAlignment="Center"
                                                               IsHidden="{Binding Data, Source={StaticResource IsRelationVisible}}" />
                                    <syncfusion:GridTemplateColumn Width="220" AllowFocus="False" AllowSorting="False">
                                        <syncfusion:GridTemplateColumn.HeaderTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Data, Source={StaticResource PNumLabel}}" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"  />
                                            </DataTemplate>
                                        </syncfusion:GridTemplateColumn.HeaderTemplate>
                                        <syncfusion:GridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding PHONE_NUMBER}" HorizontalAlignment="Center" TextAlignment="Center" VerticalAlignment="Center"  />
                                            </DataTemplate>
                                        </syncfusion:GridTemplateColumn.CellTemplate>
                                    </syncfusion:GridTemplateColumn>
                                    <syncfusion:GridTextColumn AllowFocus="False" IsReadOnly="True" Width="380" 
                                                               HeaderText="Role" MappingName="ROLE" TextAlignment="Center"
                                                               IsHidden="{Binding Data, Source={StaticResource IsRoleVisible}}" />
                                    <syncfusion:GridTextColumn AllowFocus="False" IsReadOnly="True" Width="150" 
                                                               HeaderText="Status" MappingName="STATUS" TextAlignment="Center"
                                                               IsHidden="{Binding Data, Source={StaticResource IsStatusVisible}}" />
                                </syncfusion:SfDataGrid.Columns>
                            </syncfusion:SfDataGrid>

                            <syncfusion:SfDataPager x:Name="dataPager"
                                Grid.Row="1" FontSize="18" FontWeight="DemiBold"
                                PageCount="5" PageSize="50" Margin="10" UseOnDemandPaging="True"
                                Source="{Binding Path=IncrementalItemsSource,Mode=TwoWay}" />
                        </Grid>
                    </StackPanel>
                </Viewbox>
            </Border>
        </StackPanel>
    </Grid>
    <!--</xctk:BusyIndicator>-->
</Page>
