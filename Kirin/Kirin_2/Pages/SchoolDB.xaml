<Page x:Class="Kirin_2.Pages.SchoolDB"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:gif="http://wpfanimatedgif.codeplex.com"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      xmlns:sfgrid="clr-namespace:Syncfusion.UI.Xaml.Grid;assembly=Syncfusion.SfGrid.WPF"
      xmlns:local="clr-namespace:Kirin_2.ViewModel.Command"
      xmlns:settings="clr-namespace:Kirin_2.Properties" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:Notification="clr-namespace:Syncfusion.Windows.Controls.Notification;assembly=Syncfusion.SfBusyIndicator.WPF"
      xmlns:syncfusion="http://schemas.syncfusion.com/wpf" 
      mc:Ignorable="d" 
      FontFamily="{DynamicResource MaterialDesignFont}"
      d:DesignHeight="450" d:DesignWidth="1020"
      Width="Auto"      
      SizeChanged="Window_SizeChanged"
      Title="School Database">

    <Page.Resources>
        <Style x:Key="Centering" TargetType="{x:Type TextBlock}">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />

        <Style x:Key="BorderStyle" TargetType="{x:Type Border}">
            <Setter Property="BorderThickness" Value="0,0,0,0" />
            <Setter Property="Background" Value="WhiteSmoke"/>
        </Style>

        <Style TargetType="syncfusion:GridHeaderCellControl" x:Key="headerStyle">
            <Setter Property="Background" Value="{Binding Source={x:Static settings:Settings.Default}, Path=Datagrid_header, Mode=TwoWay }" />
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="ExtraBold" />
            <Setter Property="Foreground" Value="WhiteSmoke" />
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="syncfusion:GridCell" x:Key="customCellStyle">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontFamily" Value="Roboto" />
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="sfgrid:VirtualizingCellsControl" x:Key="alternatingRowStyle">
            <Setter Property="Background" Value="#26247BC0"/>
        </Style>

        <Style TargetType="sfgrid:VirtualizingCellsControl" x:Key="RowStyle">
            <Setter Property="Background" Value="White"/>
        </Style>

        <local:BindingProxy x:Key="IsRoleVisible" Data="{Binding IsRoleVisible}" />
        <local:BindingProxy x:Key="IsContactVisible" Data="{Binding IsContactVisible}" />
        <local:BindingProxy x:Key="IsRelationVisible" Data="{Binding IsRelationVisible}" />
        <local:BindingProxy x:Key="IsStatusVisible" Data="{Binding IsStatusVisible}" />
        <local:BindingProxy x:Key="PNumLabel" Data="{Binding PhoneNumberLabel}" />
    </Page.Resources>

