                            <RotateTransform Angle="-90"></RotateTransform>
                        </Button.LayoutTransform>
                        <StackPanel Orientation="Vertical" VerticalAlignment="Top" Width="80">
                            <TextBlock Text="Admin" FontSize="18" FontWeight="Medium" Width="60"></TextBlock>
                            <ProgressBar Value="1" Width="80" Maximum="1" Height="4" Name="Padmin" Foreground="Transparent" Background="Transparent" BorderBrush="Transparent" />
                        </StackPanel>
                    </Button>
                </StackPanel>
                <Grid>
                    <Border BorderThickness="1" Grid.Row="0" Panel.ZIndex="-100" BorderBrush="{Binding Source={x:Static settings:Settings.Default}, Path=Dashboard_Box_Outline, Mode=TwoWay }"
                            Background="Transparent" Margin="-18 10 10 30" >
                        <Grid>
                            <ScrollViewer VerticalScrollBarVisibility="Visible">
                                <StackPanel x:Name="SpUser">
                                    <TextBlock Grid.Row="0" Grid.Column="0" FontSize="24" FontWeight="SemiBold" Margin="40 20 0 10">Edit User Settings</TextBlock>

                                    <Grid x:Name="GUser1">
                                        <Rectangle x:Name="RcUser" Height="270" Width="1300" Margin="30,0,40,0" Stroke="{Binding Source={x:Static settings:Settings.Default}, Path=Dashboard_Box_Outline, Mode=TwoWay }"  
                                           StrokeThickness="1" Fill="White" RadiusY="10" RadiusX="10" Visibility="Visible" HorizontalAlignment="Center">
                                        </Rectangle>
                                        <WrapPanel>
                                            <Grid >
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="50*"></RowDefinition>
                                                    <RowDefinition Height="50*"></RowDefinition>
                                                    <RowDefinition Height="50*"></RowDefinition>
                                                    <RowDefinition Height="50*"></RowDefinition>
                                                    <RowDefinition Height="50*"></RowDefinition>
                                                </Grid.RowDefinitions>
                                                <TextBlock Grid.Row="0" VerticalAlignment="Top" Margin="60 20 10 10" FontSize="20">Edit My Account Information</TextBlock>

                                                <Label Grid.Row="1" Grid.Column="0" Content="Email address : " Margin="60 10 10 10" FontSize="16" FontWeight="DemiBold"></Label>
                                                <Label Grid.Row="1" Grid.Column="1" Content="dduke@sabc.on.ca" Margin="60 10 10 10" HorizontalAlignment="Right" FontSize="16" ></Label>
                                                <Label Grid.Row="2" Grid.Column="0" Content="Language : " Margin="60 10 10 10" FontSize="16" FontWeight="DemiBold"></Label>
