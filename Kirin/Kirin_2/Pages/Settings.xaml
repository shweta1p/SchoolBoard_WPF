                                                        <StackPanel Orientation="Horizontal" Height="Auto" VerticalAlignment="Center" Background="AliceBlue" Margin="8">
                                                            <TextBlock Foreground="#247BC0" Padding="20 15 15 15" VerticalAlignment="Center" FontSize="16" FontWeight="Normal" TextWrapping="Wrap" Width="800">
