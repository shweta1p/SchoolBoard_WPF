                                                <ComboBox Grid.Row="3" Grid.Column="1" HorizontalAlignment="Right" Width="100" FontSize="16" >
                                                    <ComboBoxItem IsSelected="True">7 Days</ComboBoxItem>
                                                    <ComboBoxItem>14 Days</ComboBoxItem>
                                                    <ComboBoxItem>28 Days</ComboBoxItem>
                                                    <ComboBoxItem>30 Days</ComboBoxItem>
                                                </ComboBox>
                                            </Grid>
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="-305 210 0 0">
