                                                        <RowDefinition Height="160*" />
                                                        <RowDefinition Height="140*" />
                                                        <RowDefinition Height="80*" />
                                                        <RowDefinition Height="180*" />
                                                        <RowDefinition Height="70*" />
                                                        <RowDefinition Height="60*" />
                                                    </Grid.RowDefinitions>
                                                    <Label Content="Account Settings" Margin="30 30 30 30" FontSize="26" Grid.Row="0" Grid.Column="0"></Label>
                                                    <Label Content="Basic Settings" VerticalAlignment="Center" FontSize="18" Margin="30 15 60 15" Grid.Row="1" Grid.Column="0"></Label>
                                                    <Separator Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Width="600" Margin="150 0 0 0" Background="LightGray"/>

                                                    <Label Content="Account Id" FontWeight="Bold" VerticalAlignment="Center" FontSize="16" Margin="30 15 60 0" Grid.Row="2"></Label>
                                                    <Label Content="54516992" VerticalAlignment="Top" FontSize="16" Margin="30 0 60 15" Grid.Row="3"></Label>

                                                    <Label Content="Account Name" FontWeight="Bold" VerticalAlignment="Center" FontSize="16" Margin="30 10 60 10" Grid.Row="4"></Label>
                                                    <TextBox Height="35" VerticalAlignment="Center" BorderThickness="1" BorderBrush="LightGray" FontWeight="Light" Text="Demo Account" Foreground="Gray" FontSize="16" Grid.Row="5" Padding="12 6" Margin="30 0 60 10" ></TextBox>

                                                    <Label Content="Country of Business" FontWeight="Bold" VerticalAlignment="Center" FontSize="16" Margin="30 15 60 5" Grid.Row="6"></Label>
                                                    <ComboBox Grid.Row="7" HorizontalAlignment="Left" Width="170" FontSize="16" Margin="40 5 60 10" Foreground="Gray">
                                                        <ComboBoxItem IsSelected="True" >Select Country</ComboBoxItem>
                                                        <ComboBoxItem>United Kingdom</ComboBoxItem>
                                                        <ComboBoxItem>United States</ComboBoxItem>
                                                        <ComboBoxItem>India</ComboBoxItem>
                                                        <ComboBoxItem>Ireland</ComboBoxItem>
                                                        <ComboBoxItem>Canada</ComboBoxItem>
                                                        <ComboBoxItem>Germany</ComboBoxItem>
                                                        <ComboBoxItem>Africa</ComboBoxItem>
                                                        <ComboBoxItem>Frence</ComboBoxItem>
                                                    </ComboBox>

                                                    <Label Content="Data Sharing Settings" VerticalAlignment="Center" FontSize="18" Margin="30 15 60 10" Grid.Row="8"></Label>
