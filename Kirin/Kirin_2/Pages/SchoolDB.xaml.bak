<Page x:Class="Kirin_2.Pages.SchoolDB"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:gif="http://wpfanimatedgif.codeplex.com"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      xmlns:local="clr-namespace:Kirin_2.ViewModel.Command"
      xmlns:settings="clr-namespace:Kirin_2.Properties" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      FontFamily="{DynamicResource MaterialDesignFont}"
      d:DesignHeight="450" d:DesignWidth="1020"
      Width="Auto"      
      SizeChanged="Window_SizeChanged"
      Title="School Database">
    
    <Page.Resources>
        <Style x:Key="Centering" TargetType="{x:Type TextBlock}">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />

        <Style x:Key="BorderStyle" TargetType="{x:Type Border}">
            <Setter Property="BorderThickness" Value="0,0,0,0" />
            <Setter Property="Background" Value="WhiteSmoke"/>
        </Style>
    </Page.Resources>

    <!--<xctk:BusyIndicator x:Name="_busyIndicator" IsBusy="True" Background="WhiteSmoke"  >
        <xctk:BusyIndicator.BusyContentTemplate>
            <DataTemplate>
                <StackPanel Background="Transparent" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <StackPanel Background="Transparent" Height="100" Width="500" HorizontalAlignment="Center" VerticalAlignment="Top">
                         <TextBlock FontSize="18" FontWeight="Bold" Text="Loading School Board Database..." HorizontalAlignment="Center" VerticalAlignment="Top"/> 
                        <Image Name="imgCircle" Visibility="Visible" Width="225" Height="125" gif:ImageBehavior.AnimatedSource="/Images/loading-dots.gif" />
                    </StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </StackPanel>
            </DataTemplate>
        </xctk:BusyIndicator.BusyContentTemplate>
        <xctk:BusyIndicator.OverlayStyle>
            <Style TargetType="Rectangle">
                <Setter Property="Fill" Value="Transparent"/>
            </Style>
        </xctk:BusyIndicator.OverlayStyle>
