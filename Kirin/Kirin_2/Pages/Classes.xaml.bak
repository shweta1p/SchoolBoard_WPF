<Page x:Class="Kirin_2.Pages.Classes"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kirin_2.Pages"
      xmlns:local2="clr-namespace:Kirin_2.ViewModel.Command"
      xmlns:settings="clr-namespace:Kirin_2.Properties"
      FontFamily="{DynamicResource MaterialDesignFont}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      KeepAlive="True"
      SizeChanged="Window_SizeChanged"      Width="Auto"
      Title="Classes" HorizontalAlignment="Center">
    <Page.Resources>
        <Style x:Key="Centering" TargetType="{x:Type TextBlock}">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />            
        </Style>

        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <Style x:Key="Null"></Style>
                
        <Style TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" ClipToBounds="False">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <!-- the background for the button -->
                            <Rectangle   RadiusX="5" RadiusY="5" Grid.RowSpan="2" Height="40">
                                <Rectangle.Fill>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1" >
                                        <LinearGradientBrush.GradientStops>
                                            <GradientStop Color="#3d78a6" Offset="0"/>
                                            <GradientStop Color="#3d78a6" Offset="0.9"/>
                                        </LinearGradientBrush.GradientStops>
                                    </LinearGradientBrush>
                                </Rectangle.Fill>
                            </Rectangle>

                            <!-- place for the content inside the button to be displayed -->
                            <ContentPresenter Grid.RowSpan="2"  
              x:Name="PrimaryContent"
              HorizontalAlignment="Center" VerticalAlignment="Center"
              Margin="{TemplateBinding Padding}">
                                <ContentPresenter.ContentTemplate>
                                    <DataTemplate>
                                        <TextBlock Padding="5" Text="{Binding Path=Content, RelativeSource={RelativeSource TemplatedParent}}" FontSize="14" Foreground="WhiteSmoke" FontWeight="Bold"/>
                                    </DataTemplate>
                                </ContentPresenter.ContentTemplate>               
                            </ContentPresenter>
              <!--Content="{Binding Path=Content, RelativeSource={RelativeSource TemplatedParent}}"-->
                
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontFamily" Value="Roboto" />
        </Style>
    </Page.Resources>

    <Grid HorizontalAlignment="Stretch" Margin=" 0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0"  FontSize="17" FontWeight="SemiBold" Margin="10 0"> CLASS DIRECTORY</TextBlock>
        <Border BorderThickness="1" Grid.Column="0" Grid.Row="1" Grid.RowSpan="5" Grid.ColumnSpan="4"  Panel.ZIndex="-100" CornerRadius="5,5,5,5" BorderBrush="{Binding Source={x:Static settings:Settings.Default}, Path=Border_color, Mode=TwoWay }"   Background="Transparent" Margin="10 18 10 50" >
            <StackPanel >
            <DockPanel  Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="4">
                <!--<Label x:Name="SchoolTitle" Content="{Binding SchoolSelected.School_Name}" DockPanel.Dock="Left" HorizontalAlignment="Left"  VerticalAlignment="Top" FontSize="20" FontWeight="SemiBold" Margin="10,5,0,0" ></Label>-->
                <Label x:Name="SchoolTitle" DockPanel.Dock="Left"  Content="Saint Andre Bessette Catholic Secondary School" HorizontalAlignment="Left"  VerticalAlignment="Top" FontSize="15" FontWeight="Bold" Margin="10,5,0,0" ></Label>

                <StackPanel Orientation="Horizontal"  HorizontalAlignment="Right" Margin="0,0,40,0" DockPanel.Dock="Right" >

                    <ComboBox Visibility="Hidden" ItemsSource="{Binding SchoolList}" DisplayMemberPath="School_Name" Width="300" Style="{DynamicResource ComboBoxFlatStyle}"
                  HorizontalAlignment="Right" Margin="3 5" SelectedItem="{Binding SchoolSelected, UpdateSourceTrigger=PropertyChanged}" >
                    </ComboBox>
                    <ComboBox ItemsSource="{Binding Semester_List}" DisplayMemberPath="SEMESTER" Width="160" VerticalAlignment="Center" Style="{DynamicResource ComboBoxFlatStyle}" Height="30"  Margin="3 5"
                  HorizontalAlignment="Right" Name="cmbSemesterList">
                    </ComboBox>

                </StackPanel>
            </DockPanel>

            <!--Group box for grid view-->
            <!--<Border BorderThickness="1" Grid.Column="0" Grid.ColumnSpan="4" 
           Panel.ZIndex="-99"
          CornerRadius="5,5,5,5" BorderBrush="LightGray" Background="Transparent" Grid.RowSpan="4" Margin="0,34,-0.2,19.6"/>-->
            <!--<Border BorderThickness="1" Grid.Column="0" Grid.ColumnSpan="4" 
           Panel.ZIndex="-99"
          CornerRadius="5,5,5,5" BorderBrush="LightGray" Background="Transparent" Grid.RowSpan="4" Margin="0,34,-0.2,19.6"/>-->
                <DataGrid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" 
                          ItemsSource="{Binding STUDENTLIST}" AlternationCount="2"
                          SelectionUnit="FullRow" 
                          AlternatingRowBackground="{Binding Source={x:Static settings:Settings.Default}, Path=AlternatingBGColor, Mode=TwoWay }"
                      FontSize="12" CanUserAddRows="false" IsReadOnly="True"  GridLinesVisibility="none" CanUserReorderColumns="False" 
                          CanUserResizeColumns="False"
                          AutoGenerateColumns="False" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"  
                      Margin="10"  x:Name="DGClasses"
                         Loaded="DGClasses_Loaded"
                          Focusable="False" >

                <DataGrid.Resources>
                        <local2:BindingProxy x:Key="GenderVisibility" Data="{Binding IsGenderVisible, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"   />
                        <local2:BindingProxy x:Key="BirthdateVisibility" Data="{Binding IsBirthdateVisible, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"   />
                        <local2:BindingProxy x:Key="ExtraCoVisibility" Data="{Binding IsExtraCoVisible, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"   />
                        <local2:BindingProxy x:Key="LanguageVisibility" Data="{Binding IsLanguageVisible, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"   />
                        <local2:BindingProxy x:Key="EthnicityVisibility" Data="{Binding IsEthnicityVisible, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"   />
                        <local2:BindingProxy x:Key="OriginOfBirthVisibility" Data="{Binding IsOriginOfBirthVisible, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"   />
                        <local2:BindingProxy x:Key="CitizenshipVisibility" Data="{Binding IsCitizenshipVisible, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"   />
                                            
                        <Style BasedOn="{StaticResource {x:Type DataGridColumnHeader}}" TargetType="{x:Type DataGridColumnHeader}">
                            <Setter Property="Background" Value="{Binding Source={x:Static settings:Settings.Default}, Path=Datagrid_header, Mode=TwoWay }" />
                        <Setter Property="Height" Value="35" />
                        <Setter Property="FontSize" Value="18" />
                        <Setter Property="FontWeight" Value="ExtraBold" />
                        <Setter Property="Foreground" Value="WhiteSmoke" />

                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="Padding" Value="10 0 " />
                    </Style>
                  
                    <!--<Style TargetType="{x:Type ScrollBar}">
                    <Setter Property="Stylus.IsPressAndHoldEnabled" Value="false"/>
                    <Setter Property="Stylus.IsFlicksEnabled" Value="false"/>
                    <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
                    <Setter Property="Width" Value="10"/>
                    <Setter Property="MinWidth" Value="10"/>


                </Style>-->
                </DataGrid.Resources>
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="FontSize" Value="14" />
                            <Setter Property="Focusable" Value="False"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="TextBlock.TextAlignment" Value="Center" />
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                        </Style>
                    </DataGrid.CellStyle>
                    <DataGrid.Columns>
                    <!--<DataGridTemplateColumn  IsReadOnly="False">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>-->
                    <DataGridTemplateColumn Header="Students" >
                            <DataGridTemplateColumn.HeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="{Binding Source={x:Static settings:Settings.Default}, Path=Datagrid_header, Mode=TwoWay }" />
                                    <Setter Property="Height" Value="35" />
                                    <Setter Property="FontSize" Value="18" />
                                    <Setter Property="FontWeight" Value="ExtraBold" />
                                    <Setter Property="Foreground" Value="WhiteSmoke" />
                                    <Setter Property="Margin" Value="-65 0 0 0"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>                                 
                                </Style>
                            </DataGridTemplateColumn.HeaderStyle>
                        
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate >
                                    <StackPanel Focusable="False" Orientation="Horizontal" Width="300">
                                        <Button Focusable="False" IsTabStop="False" Style="{StaticResource Null}"  Command="{Binding Path=DataContext.cViewStudentProfile,  RelativeSource= {RelativeSource AncestorType={x:Type DataGrid}}}" CommandParameter="{Binding}"  Margin="0 0 35 0" >
                                        <Button.Template>
                                            <ControlTemplate>
                                                    <StackPanel Focusable="False" Orientation="Horizontal">
                                                <Ellipse Height="35" Width="35"   HorizontalAlignment="Stretch" Margin="10 0 0 0" VerticalAlignment="Stretch" Stroke="#d3e7f5" >
                                                    <Ellipse.Fill>
                                                        <ImageBrush ImageSource="{Binding PHOTO}"  />
                                                    </Ellipse.Fill>
                                                </Ellipse>
                                                        <TextBlock Text="{Binding Path=FULLNAME}" FocusVisualStyle="{x:Null}" Focusable="False" FontSize="14" FontWeight="Bold" Foreground="Black"   VerticalAlignment="Center" Margin="40 0 0 0"/>
                                                        <!--<TextBlock VerticalAlignment="Center" Text="{Binding Path=FULLNAME}" Foreground="Black" FontSize="14" FontWeight="Bold"  Padding="0"   Margin="40 0 0 0" />-->
                                                    </StackPanel>
                                                </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                    </StackPanel>
                            </DataTemplate>

                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                   
                        <DataGridTextColumn Header="Home Room" Width="*" Binding="{Binding Path=HOMEROOM}" Visibility="{Binding IsHomeroomVisible}" >
                            <DataGridTextColumn.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="VerticalAlignment" Value="Center"></Setter>
                                    <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                    <Setter Property="FontSize" Value="14"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Setter Property="Focusable" Value="False"/>                    
                                </Style>
                            </DataGridTextColumn.CellStyle>
                            
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Birthdate" Width="*" Binding="{Binding Path=BIRTHDATE, StringFormat=\{0:dd-MMM-yyyy\}}"   Visibility="{Binding IsBirthDateVisible}" >
                            <DataGridTextColumn.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="VerticalAlignment" Value="Center"></Setter>
                                    <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                    <Setter Property="FontSize" Value="14"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Focusable" Value="False"/>
                                </Style>
                            </DataGridTextColumn.CellStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Extra-Curricular" Width="Auto" Binding="{Binding Path=EXTRACO}"  Visibility="{Binding isExtraCoVisible}"  >
                            <DataGridTextColumn.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="VerticalAlignment" Value="Center"></Setter>
                                    <Setter Property="HorizontalAlignment" Value="CEnter"></Setter>
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Setter Property="FontSize" Value="14"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Focusable" Value="False"/>
                                </Style>
                            </DataGridTextColumn.CellStyle>
                        </DataGridTextColumn>



                        <DataGridTextColumn Header="Language" Binding="{Binding Path=LANGUAGE}" x:Name="LanguageColumn"  ElementStyle="{StaticResource Centering}" Visibility="{Binding Path=Data, Converter={StaticResource BoolToVisibilityConverter}, Source={StaticResource LanguageVisibility}}" 
                                            FontSize="14" FontWeight="Bold"  Width="110" Foreground="Black"/>

                        <DataGridTextColumn Header="Ethnicity" Binding="{Binding Path=ETHNICITY}" x:Name="EthnicityColumn" ElementStyle="{StaticResource Centering}" Visibility="{Binding Path=Data, Converter={StaticResource BoolToVisibilityConverter}, Source={StaticResource EthnicityVisibility}}"
                                            FontSize="14"  FontWeight="Bold"  Width="110" Foreground="Black" />


                        <DataGridTextColumn Header="Birth Origin" Binding="{Binding Path=ORIGIN_OF_BIRTH}" x:Name="DOBColumn" ElementStyle="{StaticResource Centering}"  Width="110" Visibility="{Binding Path=Data, Converter={StaticResource BoolToVisibilityConverter}, Source={StaticResource OriginOfBirthVisibility}}" 
                                            FontSize="14"  FontWeight="Bold" Foreground="Black" />



                        <DataGridTextColumn Header="Gender" Binding="{Binding Path=GENDER}" x:Name="GenderColumn" ElementStyle="{StaticResource Centering}" Width="80" Visibility="{Binding Path=Data, Converter={StaticResource BoolToVisibilityConverter}, Source={StaticResource GenderVisibility}}" 
                                            FontSize="14"  FontWeight="Bold" Foreground="Black"  />
                        <DataGridTextColumn Header="Citizenship" Binding="{Binding Path=CITIZENSHIP}" x:Name="CitizenshipColumn"  ElementStyle="{StaticResource Centering}" Visibility="{Binding Path=Data, Converter={StaticResource BoolToVisibilityConverter}, Source={StaticResource CitizenshipVisibility}}" 
                                            FontSize="14"  FontWeight="Bold"  Width="110" Foreground="Black"/>
                </DataGrid.Columns>
            </DataGrid>
                       </StackPanel>
            
        </Border>

        <Button Grid.Row="4" Grid.Column="0" Content="Add Column" Background="#a9c1d1" FontSize="16"  Width="Auto"  HorizontalAlignment="left" HorizontalContentAlignment="Left" Margin="10,10,5,0" Click="Button_Click" IsTabStop="False"  />

    </Grid>


</Page>
