        private void chkSelectAll_Checked(object sender, RoutedEventArgs e)
        {
            foreach (STAFF_DIRECTORY_DESC c in DGStaff.ItemsSource)
            {
                c.IsSelected = true;
            }
        }

        private void chkSelectAll_Unchecked(object sender, RoutedEventArgs e)
        {
            foreach (STAFF_DIRECTORY_DESC c in DGStaff.ItemsSource)
            {
                c.IsSelected = false;
            }
        }


        private void SearchBox_TextChanged(object sender, TextChangedEventArgs e)
        {
            var Searchbox = sender as TextBox;
            var SBCollectionView = CollectionViewSource.GetDefaultView(DGStaff.ItemsSource);
            SBCollectionView.Filter = FilterSB;
            SBCollectionView.Refresh();


        }

        private bool FilterSB(object obj)
        {
            if (obj is SCHOOLDB_DESC SB)
            {
                return SB.NAME.ToUpper().StartsWith(SearchBox.Text.ToUpper()) ||
                    //  SB.ROOM_NUMBER.ToUpper().StartsWith(SearchBox.Text.ToUpper()) ||
                    SB.EMAIL.ToUpper().StartsWith(SearchBox.Text.ToUpper());
               // SB.PHONE_NUMBER.ToUpper().StartsWith(SearchBox.Text.ToUpper());

            }
            return false;
        }


