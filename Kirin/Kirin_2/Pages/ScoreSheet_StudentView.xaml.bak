                                                <Button Click="BackButton_Click">
                                                    <materialDesign:PackIcon Kind="ArrowLeftDropCircleOutline" Foreground="White"  Width="30" Height="30"/>
                                                </Button>
                                                <Button Click="ForwardButton_Click">
                                                    <materialDesign:PackIcon Kind="ArrowRightDropCircleOutline" Foreground="White" Width="30" Height="30"/>
                                                </Button>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>
                                    <Border Background="#D7E6F8" Height="40" VerticalAlignment="Bottom"  HorizontalAlignment="Stretch">
                                        <TextBlock Text="Assignments" FontSize="20" VerticalAlignment="Center" FontWeight="ExtraBold"/>
                                    </Border>
                                </StackPanel>
