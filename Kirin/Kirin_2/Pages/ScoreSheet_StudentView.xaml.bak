                                        </Rectangle>
                                        <StackPanel VerticalAlignment="Center" Height="120">
                                            <TextBlock Text="{Binding DataContext.SELECTED_FULLNAME, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}" Foreground="WhiteSmoke" FontWeight="DemiBold" FontSize="25" VerticalAlignment="Center" TextAlignment="Center" Margin="0 10 0 20"/>
