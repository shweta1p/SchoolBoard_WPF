                            <materialDesign:ColorZone IsTabStop="False" CornerRadius="20" VerticalAlignment="Bottom"
                                HorizontalAlignment="Left" HorizontalContentAlignment="Left" Mode="Light"
                                materialDesign:ShadowAssist.ShadowDepth="Depth1" Height="35" Width="200" Background="WhiteSmoke" Margin="30 0 0 10" >
                                <StackPanel Width="200" VerticalAlignment="Center" HorizontalAlignment="Right" Orientation="Horizontal">
                                    <Button Style="{DynamicResource MaterialDesignToolButton}" VerticalContentAlignment="center">
                                        <materialDesign:PackIcon Kind="Search" Width="20" Height="30" Opacity=".56"  />
                                    </Button>
                                    <TextBox Width="180" FontWeight="Bold" FontSize="14" Margin="8 0 0 0"
                                            materialDesign:HintAssist.Hint="" materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                            BorderThickness="0" MinWidth="100" Name="SearchBox"
                                            TextChanged="SearchBox_TextChanged" VerticalAlignment="Center" />
                                </StackPanel>
                            </materialDesign:ColorZone>

                            <Button IsTabStop="False" Style="{StaticResource MaterialDesignIconButton}"
                              HorizontalAlignment="Right" Margin="10,0,0,0" Click="Print_Click" VerticalAlignment="Center" Background="Transparent" 
                              IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}">
                                <materialDesign:PackIcon ToolTip="Print" Kind="Printer" Foreground="Gray" Height="22" />
                            </Button>
                        </StackPanel>
                    </Viewbox>
                    <Viewbox x:Name="vbdashboard" Stretch="UniformToFill" Grid.Row="0" Grid.Column="0" Margin="10" >
                        <StackPanel>
                            <!--<DataGrid x:Name="DGStaff" IsReadOnly="True" SelectionUnit="FullRow"  VerticalAlignment="Top" ItemsSource="{Binding STAFFDIRECTORY}" AlternationCount="2"
                                  AlternatingRowBackground="{Binding Source={x:Static settings:Settings.Default}, Path=AlternatingBGColor, Mode=TwoWay }"
                                  CanUserResizeColumns="False" RowHeight="35" FontWeight="Bold" Height="500" FontSize="16"
                                  CanUserAddRows="false" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Auto"  Focusable="False"
                                  GridLinesVisibility="None" CanUserReorderColumns="False" CanUserSortColumns="True" 
                                  AutoGenerateColumns="False" Margin="10 10 5 10" >

                                <DataGrid.Resources>
                                    <Style BasedOn="{StaticResource {x:Type DataGridColumnHeader}}" TargetType="{x:Type DataGridColumnHeader}">
                                        <Setter Property="Background" Value="{Binding Source={x:Static settings:Settings.Default}, Path=Datagrid_header, Mode=TwoWay }" />
                                        <Setter Property="Height" Value="30" />
                                        <Setter Property="FontSize" Value="16" />
                                        <Setter Property="Foreground" Value="WhiteSmoke" />
                                        <Setter Property="FontWeight" Value="ExtraBold"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                        <Setter Property="Padding" Value="10 0" />
                                    </Style>
                                </DataGrid.Resources>
                                <DataGrid.CellStyle>
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="Padding" Value="0"/>
                                        <Setter Property="FontSize" Value="16" />
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="TextBlock.TextAlignment" Value="Center" />
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                    </Style>
                                </DataGrid.CellStyle>
                                <DataGrid.Columns>
                                    <DataGridCheckBoxColumn ElementStyle="{StaticResource Null}"  Binding="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  IsReadOnly="False" x:Name="Checkboxcolumn" >
                                        <DataGridCheckBoxColumn.Header>
                                            <CheckBox Name="chkSelectAll" IsTabStop="False"  Checked="chkSelectAll_Checked" Unchecked="chkSelectAll_Unchecked" VerticalAlignment="Center" ></CheckBox>
                                        </DataGridCheckBoxColumn.Header>
                                        <DataGridCheckBoxColumn.CellStyle>
                                            <Style TargetType="DataGridCell">
                                                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                <EventSetter  Event="CheckBox.Click" Handler="ChckClicked"/>
                                            </Style>
                                        </DataGridCheckBoxColumn.CellStyle>
                                    </DataGridCheckBoxColumn>
                                    <DataGridTextColumn Header="#" Binding="{Binding Path=RNo}" ElementStyle="{StaticResource Centering}" Width="40" />

                                    <DataGridTemplateColumn Header="Name" Width="230">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Button FocusVisualStyle="{x:Null}" Click="ViewProfile" VerticalContentAlignment="Center">
                                                        <Button.Template>
                                                            <ControlTemplate>
                                                                <TextBlock Text="{Binding Path=NAME}" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" />
                                                            </ControlTemplate>
                                                        </Button.Template>
                                                    </Button>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>

                                    <DataGridTextColumn Header="Email" Binding="{Binding Path=EMAIL}" Width="230" >
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="{x:Type TextBlock}">
                                                <Setter Property="HorizontalAlignment" Value="Left" />
                                                <Setter Property="Foreground" Value="#004890"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                <Setter Property="FontSize" Value="16"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Phone #" Binding="{Binding Path=PHONE_NUMBER}" ElementStyle="{StaticResource Centering}" Width="200" />
                                    <DataGridTextColumn Header="Role" Binding="{Binding Path=ROLE}" ElementStyle="{StaticResource Centering}" Width="280" />
                                </DataGrid.Columns>
                            </DataGrid>-->
                            <!--<Notification:SfBusyIndicator x:Name="busyIndicator" Visibility="Collapsed"/>-->
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <syncfusion:SfDataGrid x:Name="DGStaff" Grid.Row="0" GridLinesVisibility="None" AlternationCount="2" 
                                       AlternatingRowStyle ="{StaticResource alternatingRowStyle}" HorizontalContentAlignment="Center"
                                       BorderBrush="{Binding Source={x:Static settings:Settings.Default}, Path=Dashboard_Box_Outline, Mode=TwoWay }" 
                                       VerticalContentAlignment="Center" Focusable="False" EnableDataVirtualization="True"
                                       RowStyle="{StaticResource RowStyle}" FontSize="16" FontWeight="Bold"
                                       AllowEditing="False" Margin="30 10 10 10" RowHeight="40" HeaderRowHeight="40" 
                                       AutoGenerateColumns="False" HeaderStyle="{StaticResource headerStyle}"
                                       ItemsSource="{Binding ElementName=dataPager,Path=PagedSource,Mode=TwoWay}" SelectionMode="Multiple">
                                    <syncfusion:SfDataGrid.Resources>
                                        <Style TargetType="{x:Type Button}">
                                            <Setter Property="Height" Value="30"/>
                                            <Setter Property="Foreground" Value="Black"/>
                                            <Setter Property="Padding" Value="0" />
                                            <Setter Property="FontSize" Value="16" />
                                            <Setter Property="FontWeight" Value="Bold" />
                                            <Setter Property="FontFamily" Value="Roboto" />
                                            <Setter Property="Tag" Value="{Binding Path=ID}" />
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                            <Setter Property="Focusable" Value="False"/>
                                        </Style>
                                    </syncfusion:SfDataGrid.Resources>

                                    <syncfusion:SfDataGrid.Columns>
                                        <!--<syncfusion:GridCheckBoxSelectorColumn MappingName="IsSelected" AllowCheckBoxOnHeader="True" IsReadOnly="False" x:Name="Checkboxcolumn" AllowFocus="False">
                                            <syncfusion:GridCheckBoxSelectorColumn.HeaderTemplate>
                                                <DataTemplate>
                                                    <CheckBox Checked="chkSelectAll_Checked" Unchecked="chkSelectAll_Unchecked"/>
                                                </DataTemplate>
                                            </syncfusion:GridCheckBoxSelectorColumn.HeaderTemplate>
                                        </syncfusion:GridCheckBoxSelectorColumn>-->
                                        <syncfusion:GridTemplateColumn AllowFocus="False" Width="60">
                                            <syncfusion:GridTemplateColumn.HeaderTemplate>
                                                <DataTemplate>
                                                    <CheckBox Style="{Binding null}" IsTabStop="False" Checked="chkSelectAll_Checked" Unchecked="chkSelectAll_Unchecked"/>
                                                </DataTemplate>
                                            </syncfusion:GridTemplateColumn.HeaderTemplate>
                                            <syncfusion:GridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox Style="{Binding null}" IsTabStop="False" HorizontalAlignment="Center" VerticalAlignment="Center" IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Click="ChckClicked" />
                                                </DataTemplate>
                                            </syncfusion:GridTemplateColumn.CellTemplate>
                                        </syncfusion:GridTemplateColumn>
                                        <syncfusion:GridTextColumn AllowFocus="False" IsReadOnly="True" HeaderText="#" MappingName="RNo" Width="70" TextAlignment="Center">
                                        </syncfusion:GridTextColumn>
                                        <syncfusion:GridTextColumn AllowFocus="False" Width="230" HeaderText="Name" MappingName="NAME" TextAlignment="Center">
                                            <syncfusion:GridTextColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Button Click="ViewProfile" VerticalContentAlignment="Center">
                                                            <Button.Template>
                                                                <ControlTemplate>
                                                                    <TextBlock Text="{Binding NAME}" Foreground="Black" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" Margin="5 0 0 0" />
                                                                </ControlTemplate>
                                                            </Button.Template>
                                                        </Button>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </syncfusion:GridTextColumn.CellTemplate>
                                        </syncfusion:GridTextColumn>
                                        <syncfusion:GridTextColumn AllowFocus="False" IsReadOnly="True" Width="240" HeaderText="Email" MappingName="EMAIL" TextAlignment="Center" />
                                        <syncfusion:GridTextColumn AllowFocus="False" IsReadOnly="True" Width="220" HeaderText="Phone #" MappingName="PHONE_NUMBER" TextAlignment="Center" />
                                        <syncfusion:GridTextColumn AllowFocus="False" IsReadOnly="True" Width="280" HeaderText="Role" MappingName="ROLE" TextAlignment="Center" />
                                    </syncfusion:SfDataGrid.Columns>
                                </syncfusion:SfDataGrid>

                                <syncfusion:SfDataPager x:Name="dataPager"
                                Grid.Row="1" FontSize="22" FontWeight="DemiBold"
                                PageCount="5" PageSize="50" Margin="10" UseOnDemandPaging="True"
                                Source="{Binding STAFFDIRECTORY, Mode=TwoWay}" />
                            </Grid>
                        </StackPanel>
                    </Viewbox>
                    <StackPanel HorizontalAlignment="Center" Margin="20 10 20 20" Width="450">
                        <TextBlock Text="Group Email:" FontSize="16" FontWeight="Bold" />
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Highlight -->" VerticalAlignment="Center" TextWrapping="WrapWithOverflow" FontSize="16" FontWeight="DemiBold"/>
                            <!--<Label ="Copy_Click" Content="Copy" FontSize="12" FontWeight="bold" Foreground="blue"></Label>-->
                            <Button DockPanel.Dock="right" Style="{StaticResource copybtn}" Background="Transparent" FontSize="18"
                                    VerticalContentAlignment="Bottom" BorderThickness="0" HorizontalAlignment="Center" Margin="0,0,0,0" Width="50" 
                                    Click="Copy_Click" Foreground="Blue" FontWeight="Bold" VerticalAlignment="Top" Content=" Copy ">
                            </Button>
                            <TextBlock VerticalAlignment="Center" Text="--> Paste into your favorite email client." TextWrapping="WrapWithOverflow" FontSize="16" FontWeight="DemiBold"/>
                        </StackPanel>
                        <DockPanel>
                            <TextBox IsTabStop="False" DockPanel.Dock="left" Style="{x:Null}" FontSize="16"
                                      Name="tbMultiLine" TextWrapping="Wrap" AcceptsReturn="True" Height="100"
                                      VerticalScrollBarVisibility="Auto">
                            </TextBox>
                        </DockPanel>
                    </StackPanel>
                </StackPanel>
            </Border>
            <!--</StackPanel>
            </Viewbox>-->
        </StackPanel>
    </Grid>
    <!--</xctk:BusyIndicator>-->
</Page>
