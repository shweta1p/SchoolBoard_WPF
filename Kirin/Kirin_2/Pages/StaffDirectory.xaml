                                <TextBlock Text=" - " FontWeight="DemiBold" Foreground="#004890" FontSize="14" VerticalAlignment="Center"/>
                                <Button IsTabStop="False" Style="{StaticResource copybtn}" Background="Transparent"  VerticalContentAlignment="Bottom"
                                BorderThickness="0" HorizontalAlignment="Right" Margin="0,0,0,0" Width="55" FontWeight="DemiBold" VerticalAlignment="Center" 
                                Foreground="#004890" FontSize="14" Content="Staff"
                                Click="btnStaff_Click" />

                                <TextBlock Text=" - " FontWeight="DemiBold" Foreground="#004890" FontSize="14" VerticalAlignment="Center"/>
