                                    <Setter Property="Margin" Value="5"/>
                                </Style>
                            </DataGridTextColumn.CellStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>-->
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
